<% if @event.errors.any? %>
    <ul>
        <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= f.label :name %>
<%= f.text_field :name, :class => "form-control" %>
<!--為 name 建立一個text_field的輸入框 跟new不同的是 rails很聰明的會把資料庫的內容先帶入-->

<%= f.label :description %>
<%= f.text_area :description, :class => "form-control" %>
